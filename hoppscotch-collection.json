{
  "v": 1,
  "name": "AwesomeShare Video API",
  "folders": [
    {
      "name": "Authentication",
      "requests": [
        {
          "name": "Register User",
          "method": "POST",
          "url": "{{base_url}}/api/register",
          "headers": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "contentType": "application/json",
            "body": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
          }
        },
        {
          "name": "Login",
          "method": "POST",
          "url": "{{base_url}}/api/login",
          "headers": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "contentType": "application/json",
            "body": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
          }
        },
        {
          "name": "Get Current User",
          "method": "GET",
          "url": "{{base_url}}/api/me",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ]
        }
      ]
    },
    {
      "name": "Videos (REST Compliant)",
      "requests": [
        {
          "name": "List All Videos",
          "method": "GET",
          "url": "{{base_url}}/api/videos",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ]
        },
        {
          "name": "Upload Video",
          "method": "POST",
          "url": "{{base_url}}/api/videos",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ],
          "body": {
            "contentType": "multipart/form-data",
            "body": [
              {
                "key": "video",
                "value": "",
                "description": "Video file to upload",
                "type": "file"
              },
              {
                "key": "title",
                "value": "My Test Video",
                "type": "text"
              },
              {
                "key": "is_public",
                "value": "true",
                "type": "text"
              }
            ]
          }
        },
        {
          "name": "Get Video Details",
          "method": "GET",
          "url": "{{base_url}}/api/videos/{{video_id}}",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ]
        },
        {
          "name": "Update Video Title",
          "method": "PUT",
          "url": "{{base_url}}/api/videos/{{video_id}}",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            },
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "contentType": "application/json",
            "body": "{\n  \"title\": \"Updated Video Title\"\n}"
          }
        },
        {
          "name": "Update Video Visibility",
          "method": "PATCH",
          "url": "{{base_url}}/api/videos/{{video_id}}",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            },
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "contentType": "application/json",
            "body": "{\n  \"is_public\": true\n}"
          }
        },
        {
          "name": "Delete Video",
          "method": "DELETE",
          "url": "{{base_url}}/api/videos/{{video_id}}",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ]
        }
      ]
    },
    {
      "name": "Video Sub-Resources",
      "requests": [
        {
          "name": "Stream Video",
          "method": "GET",
          "url": "{{base_url}}/api/videos/{{video_id}}/stream",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ]
        },
        {
          "name": "Download Video",
          "method": "GET",
          "url": "{{base_url}}/api/videos/{{video_id}}/download",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ]
        },
        {
          "name": "Get Video Versions",
          "method": "GET",
          "url": "{{base_url}}/api/videos/{{video_id}}/versions",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ]
        },
        {
          "name": "List Video Transcodes",
          "method": "GET",
          "url": "{{base_url}}/api/videos/{{video_id}}/transcodes",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ]
        },
        {
          "name": "Get Video Thumbnail",
          "method": "GET",
          "url": "{{base_url}}/api/thumbnails/{{video_id}}"
        }
      ]
    },
    {
      "name": "Transcodes (REST Compliant)",
      "requests": [
        {
          "name": "Create Transcode Job",
          "method": "POST",
          "url": "{{base_url}}/api/transcodes",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            },
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "contentType": "application/json",
            "body": "{\n  \"video_id\": \"{{video_id}}\",\n  \"format\": \"mp4\",\n  \"resolution\": \"720p\"\n}"
          }
        },
        {
          "name": "Get Transcode Details",
          "method": "GET",
          "url": "{{base_url}}/api/transcodes/{{transcode_id}}",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ]
        }
      ]
    },
    {
      "name": "Admin Operations",
      "requests": [
        {
          "name": "Bulk Transcode",
          "method": "POST",
          "url": "{{base_url}}/api/bulk-transcode",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            },
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "contentType": "application/json",
            "body": "{\n  \"videoIds\": [\"{{video_id}}\"],\n  \"format\": \"mp4\",\n  \"resolution\": \"720p\",\n  \"count\": 1\n}"
          }
        }
      ]
    },
    {
      "name": "System",
      "requests": [
        {
          "name": "Health Check",
          "method": "GET",
          "url": "{{base_url}}/api/health"
        }
      ]
    },
    {
      "name": "Legacy Endpoints",
      "requests": [
        {
          "name": "Legacy Upload",
          "method": "POST",
          "url": "{{base_url}}/api/upload",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ],
          "body": {
            "contentType": "multipart/form-data",
            "body": [
              {
                "key": "video",
                "value": "",
                "description": "Video file to upload",
                "type": "file"
              },
              {
                "key": "title",
                "value": "Legacy Upload Test",
                "type": "text"
              },
              {
                "key": "is_public",
                "value": "true",
                "type": "text"
              }
            ]
          }
        },
        {
          "name": "Legacy Transcode",
          "method": "POST",
          "url": "{{base_url}}/api/videos/{{video_id}}/transcode",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            },
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "contentType": "application/json",
            "body": "{\n  \"format\": \"mp4\",\n  \"resolution\": \"720p\"\n}"
          }
        },
        {
          "name": "Legacy Toggle Public",
          "method": "POST",
          "url": "{{base_url}}/api/videos/{{video_id}}/toggle-public",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ]
        },
        {
          "name": "Legacy Transcode Status",
          "method": "GET",
          "url": "{{base_url}}/api/transcodes/{{transcode_id}}/status",
          "headers": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ]
        }
      ]
    }
  ],
  "environments": [
    {
      "name": "Local Development",
      "variables": [
        {
          "key": "base_url",
          "value": "http://localhost:3000"
        },
        {
          "key": "token",
          "value": ""
        },
        {
          "key": "video_id",
          "value": ""
        },
        {
          "key": "transcode_id",
          "value": ""
        }
      ]
    },
    {
      "name": "Production",
      "variables": [
        {
          "key": "base_url",
          "value": "https://your-production-domain.com"
        },
        {
          "key": "token",
          "value": ""
        },
        {
          "key": "video_id",
          "value": ""
        },
        {
          "key": "transcode_id",
          "value": ""
        }
      ]
    }
  ]
}
